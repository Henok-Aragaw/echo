generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  //@default(auto()) and @db.ObjectId
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  sessions      Session[]
  accounts      Account[]


  //New Relation

  fragments     Fragment[]
  dailyMemories DailyMemory[]
  
  @@unique([email])
  @@map("user")
}

model Session {
  // @default(auto()) and @db.ObjectId
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  
  // Foreign key must also be marked as ObjectId
  userId    String   @db.ObjectId 
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  // @default(auto()) and @db.ObjectId
  id                    String    @id @default(auto()) @map("_id") @db.ObjectId
  accountId             String
  providerId            String
  
  // Foreign key must also be marked as ObjectId
  userId                String    @db.ObjectId
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  //@default(auto()) and @db.ObjectId
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}


enum FragmentType {
  TEXT
  IMAGE
  LINK
  LOCATION
}

model Fragment {
  id              String     @id   @default(auto()) @map("_id") @db.ObjectId
  userId          String     @db.ObjectId
  user            User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  type            FragmentType

  content         String   // text, link url, or location string
  mediaUrl        String?

  createdAt       DateTime   @default(now())

  insight         Insight? 

  @@map("fragments")
}

model Insight {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  fragmentId String   @unique @db.ObjectId
  fragment   Fragment @relation(fields: [fragmentId], references: [id], onDelete: Cascade)
  content    String   // The AI reflection
  createdAt  DateTime @default(now())

  @@map("insights")
}

model DailyMemory {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date      DateTime // Normalized to midnight of that day
  summary   String   // The AI summary of the day
  createdAt DateTime @default(now())

  @@unique([userId, date])
  @@map("daily_memories")
}